{
    "name": "gloom",
    "version": "0.1.0",
    "private": true,
    "description": "A framework for building intelligent agents with human-inspired memory systems",
    "workspaces": [
      "packages/*"
    ],
    "scripts": {
      "build": "turbo run build",
      "dev": "turbo run dev",
      "lint": "turbo run lint",
      "test": "turbo run test",
      "clean": "turbo run clean",
      "format": "prettier --write \"**/*.{ts,tsx,md}\"",
      "publish-packages": "turbo run build lint test && changeset publish",
      "version-packages": "changeset version",
      "generate-docs": "typedoc"
    },
    "devDependencies": {
      "@changesets/cli": "^2.27.1",
      "@types/jest": "^29.5.11",
      "@types/node": "^20.10.5",
      "@typescript-eslint/eslint-plugin": "^6.15.0",
      "@typescript-eslint/parser": "^6.15.0",
      "eslint": "^8.56.0",
      "eslint-config-prettier": "^9.1.0",
      "jest": "^29.7.0",
      "prettier": "^3.1.1",
      "ts-jest": "^29.1.1",
      "ts-node": "^10.9.2",
      "turbo": "^1.11.2",
      "typedoc": "^0.25.4",
      "typescript": "^5.3.3"
    },
    "packageManager": "pnpm@8.9.0",
    "engines": {
      "node": ">=18.0.0"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/askgloom/gloom.git"
    },
    "keywords": [
      "ai",
      "agents",
      "memory",
      "cognitive-architecture",
      "machine-learning"
    ],
    "author": "Gloom Team",
    "license": "MIT",
    "bugs": {
      "url": "https://github.com/askgloom/gloom/issues"
    },
    "homepage": "https://github.com/askgloom/gloom#readme",
    "volta": {
      "node": "18.x"
    },
    "dependencies": {
      "zod": "^3.22.4"
    }
  }